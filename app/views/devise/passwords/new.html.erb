<%= stylesheet_link_tag "log_in" %>

<div class="page">
  <div class="login_container">
    <h2 class="login_header">Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, :class => 'login_label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'login_field' %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", :class => 'login_button', html: {width: "150%"} %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>