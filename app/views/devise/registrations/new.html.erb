<%= stylesheet_link_tag "log_in" %>

<div class="page">
  <div class="login_container">
    <h2 class="login_header">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, :class => 'login_label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'login_field' %>
      </div>

      <div class="field">
        <%= f.label :password, :class => 'login_label' %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", :class => 'login_field' %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, :class => 'login_label' %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :class => 'login_field' %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", :class => 'login_button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
