<%= stylesheet_link_tag "log_in" %>

<div class="page">
  <div class="login_container">
    <h2 class="login_header">Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :email, :class => 'login_label' %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :class => 'login_field' %>
      </div>

      <div class="field">
        <%= f.label :password, :class => 'login_label' %><br />
        <%= f.password_field :password, autocomplete: "current-password", :class => 'login_field' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me, :class => 'remember_check' %>
          <%= f.label :remember_me, :class => 'login_label remember' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", :class => 'login_button' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
